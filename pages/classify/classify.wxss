.classify-container{
  background-color: #F7F7F7;
  padding-top: 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.classify-container .search{
  height: 100rpx;
  border-bottom: 1px solid #dcdcdc;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #FFF;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.classify-container .search-input{
  flex: 1;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.classify-container .iconfont{
  width: 80rpx;
  height: 80rpx;
  font-size: 40rpx;
}

.classify-container .list{
  flex-wrap: wrap;
}
.classify-container .item{
  width: 33.33333333%;
  text-align: center;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classify-container .item-image{
  width: 210rpx;
  height: 210rpx;
  border-radius: 50%;
}
.classify-container .item-name{
  padding: 20rpx 0;
  font-size: 24rpx;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}