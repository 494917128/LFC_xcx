.service-container{

}

.service-container .title{
  padding: 0 60rpx;
  height: 120rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.service-container .item{
  flex-direction: column;
  height: 375rpx;
  border: 1px solid #dcdcdc;
  background-color: #FFF;
  border-radius: 0;
  border-left: none;
  line-height: 1.5;
  box-sizing:border-box;
  color:#000000;
}
.service-container .item::after{
  content: none;
}
.service-container .item:last-child{
  border-right: none;
}
.service-container .item .iconfont{
  font-size: 110rpx;
  line-height: 1;
  padding: 10rpx;
}
.service-container .item-title{
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1.6;
}
.service-container .item-text{
  font-size: 20rpx;
  color: #999;
}

.service-container .content{
  padding: 60rpx;
}
.service-container .content-item{
  color: #666;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}