.bag-container{
  background-color: #F7F7F7;
  min-height: 100vh;
  padding-top: 1px;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.bag-container .item{
  display: flex;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.bag-container .item-select {
  padding: 10rpx 30rpx;
}
.bag-container .item-image {
  width: 190rpx;
  height: 250rpx;
}
.bag-container .item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
  position: relative;
}
.bag-container .item-text {
  font-size: 28rpx;
  line-height: 1.5;
  padding: 8rpx 0;
}
.bag-container .item-text-item::after {
  content: ','
}
.bag-container .item-text-item:last-child::after {
  content: none;
}
.bag-container .item-price {
  font-size: 32rpx;
  line-height: 1.5;
  padding: 8rpx 0;
}
.bag-container .bag-num {
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
}

.bag-container .footer {
  background-color: #F7F7F7;
  border-top: 1px solid #DDD;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.bag-container .footer-select{
  flex: 3;
  border-right: 1px solid #DDD;
  display: flex;
  font-size: 28rpx;  
}
.bag-container .footer-info{
  flex: 4;
  font-size: 28rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bag-container .footer-price{
  font-size: 32rpx;
  font-weight: bold;
}
.bag-container .footer-button{
  flex: 3;
  background-color: #000;
  color: #fff;
  font-size: 32rpx;
}