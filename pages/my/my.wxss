.my-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.my-container .image {
  width: 100%;
  height: 100%;
  flex: 1;
}
.my-container .content {
}
.my-container .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 190rpx;
  border-top: 1px solid #F2F2F2;
  border-right: 1px solid #F2F2F2;
  box-shadow: 0 0 4rpx #DCDCDC;
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
}
.my-container .item:last-child {
  border-right: none;
}
.my-container .item .iconfont{
  width: 60rpx;
  height: 60rpx;
  font-weight: initial;
  font-size: 60rpx;
  padding-bottom: 20rpx;
}