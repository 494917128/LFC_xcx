.media-container{
  padding-top: 100rpx;
  min-height: 100vh;
  background-color: #f7f7f7;
}

.media-container .search{
  height: 100rpx;
  border-bottom: 1px solid #dcdcdc;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #FFF;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 7;
}
.media-container .search-input{
  flex: 1;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.media-container .iconfont{
  width: 80rpx;
  height: 80rpx;
  font-size: 40rpx;
}
